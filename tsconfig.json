{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "lib": ["dom", "es2017"],
    "rootDirs": ["src", "tests"],
    "sourceMap": true,
    "strict": false,
    "noImplicitAny": true,
    "declaration": true,
    "outDir": "build",
    "declarationMap": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "build/**/*"]
}
